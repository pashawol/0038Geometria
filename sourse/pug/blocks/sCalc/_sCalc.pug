mixin sCalc(data)
	// start sCalc
	+b.SECTION.sCalc.section#sCalc&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 Калькулятор расчета стоимости
				//- +e.step-wrap
			mixin item(t,p)
				+e.step-item&attributes(attributes)
					+e.head
						+e.title= t
						+e.count=`Шаг ${p} из 5 `
					+e.body
						block
					if p !=="5"
						+e.footer
							if p !=="1"
								+e.BUTTON.btn--prev(type="button")
									+icon("chevron-left")
									| Вернуться назад
							+e.BUTTON.btn--next(type="button") Далее
			mixin radio-block(i,t,n)
				+b.LABEL.radio-block
					input(type="radio", name= n)
					span.d-block: +e.SPAN.img-wrap
						block
						img(src=`img/svg/${i}.svg`, alt="")
					+e.SPAN.title!= t
			+e.step-wrap
				+item(`Куда выбираете окна?`,`1`)
				
					.row
						+e.col.col-lg-3
							+radio-block(`step-1-1`,`В квартиру`,`step-1`)
						+e.col.col-lg-3
							+radio-block(`step-1-2`,`В частный дом`,`step-1`)
						+e.col.col-lg-3
							+radio-block(`step-1-3`,`В офис`,`step-1`)
				+item(`Сколько нужно конструкций (окон, дверей)?`,`2`)
					.row
						+e.col.col-lg-3
							+radio-block(`step-2-1`,`1 шт.`,`step-2`)
								+e.SPAN.count 1
						+e.col.col-lg-3
							+radio-block(`step-2-1`,`2 шт.`,`step-2`)
								+e.SPAN.count 2
						+e.col.col-lg-3
							+radio-block(`step-2-1`,`3 шт.`,`step-2`)
								+e.SPAN.count 3
						+e.col.col-lg-3
							+radio-block(`step-2-1`,`4 шт.`,`step-2`)
								+e.SPAN.count 4
				+item(`Вам нужны только конструкции или ещё дополнительные услуги?`,`3`)
					.row
						+e.col.col-lg-3
							+radio-block(`step-2-1`,`Только конструкции<br> (без установки)`,`step-3`) 
						+e.col.col-lg-3
							+radio-block(`step-3-2`,`Конструкции + монтажные услуги`,`step-3`) 

				+item(`Выберите монтажные услуги`,`4`)
					+e.center
						+in-c('checkbox','Доставка')
						+in-c('checkbox','Демонтаж старых конструкций')
						+in-c('checkbox','Монтаж новой конструкции')
						+in-c('checkbox','Отделка откосов')


				+item(`Оставьте телефон, на который мы можем сообщить расчет`,`5`)
					+form-wrap 
						.row 
							.col-lg-6
								+input('Ваше имя')
								+input('Ваш номер телефона','tel')
									+e.code +7
							.col-lg-6
								+input('Комментарий (необязательно)','textarea')
						+e.btn(type="submit") Отправить на расчет
						+polite()
	// end sCalc